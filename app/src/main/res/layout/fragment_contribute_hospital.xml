<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContributeHospital">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ফার্মেসি এ্যাড করুন"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="@color/purple_700"
            android:gravity="center"
            android:layout_margin="20sp"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginHorizontal="10sp"
            android:layout_marginVertical="5sp"
            android:hint="@string/pharmacy_name">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/pharmacy_name_add"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginHorizontal="10sp"
            android:layout_marginVertical="5sp"
            android:hint="@string/pharmacy_mobile_number">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="phone"
                android:id="@+id/pharmacy_phone_add"/>
        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginHorizontal="10sp">
          <TextView
              android:layout_width="match_parent"
              android:layout_weight="1"
              android:id="@+id/selected_opening_time"
              android:gravity="center"
              android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent"
                android:id="@+id/selected_closing_time"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10sp">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5sp"
                android:id="@+id/select_opening_time"
                android:text="খোলার সময়"/>
            <Button
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_margin="5sp"
                android:layout_height="match_parent"
                android:id="@+id/select_closing_time"
                android:text="বন্ধের সময়"/>
        </LinearLayout>
        <fragment
            android:layout_width="match_parent"
            android:layout_height="400sp"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:id="@+id/map_contribute_pharmacy"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/image_selected_phar"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ফার্মেসির ছবি যুক্ত করুন"
            android:id="@+id/add_phar_photo_btn"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10sp"
            android:id="@+id/image_selected_confirm"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:layout_gravity="center"
            android:id="@+id/submit_add_phar"
            android:text="অনুরোধ করুন"/>
    </LinearLayout>
</ScrollView>