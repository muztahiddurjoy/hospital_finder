<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_layout"
    android:layout_width="match_parent"
    android:background="@drawable/bottom_sheet_background"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_bottom"
        android:text="Hospital Name"
        android:layout_margin="10sp"
        android:textSize="17sp"
        android:textAlignment="center"
        android:textColor="@color/redPrimary"
        android:gravity="center"/>
    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:dividerColor="@android:color/darker_gray"
        android:minWidth="2sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10sp">
        <androidx.cardview.widget.CardView
            android:layout_width="100sp"
            android:layout_height="100sp"
            app:cardCornerRadius="10sp"
            android:layout_weight="1"
            android:layout_marginHorizontal="10sp"
            android:elevation="20sp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/redPrimary"
                android:orientation="vertical"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:src="@drawable/hospital_bed"
                    app:tint="@color/white" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Beds"
                    android:id="@+id/beds_bottom"
                    android:textSize="17sp"
                    android:textColor="@color/white"
                    android:textAlignment="center"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:text="শয্যা রয়েছে"
                    android:textSize="12sp"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="100sp"
            android:layout_height="100sp"
            app:cardCornerRadius="10sp"
            android:layout_weight="1"
            android:layout_marginHorizontal="10sp"
            android:elevation="20sp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/redPrimary"
                android:orientation="vertical"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:src="@drawable/doctor"
                    app:tint="@color/white" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Doctors"
                    android:id="@+id/doctors_bottom"
                    android:textSize="17sp"
                    android:textColor="@color/white"
                    android:textAlignment="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:text="জন ডাক্তার রয়েছে"
                    android:textSize="12sp"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_weight="1"
            android:layout_marginHorizontal="10sp"
            app:cardCornerRadius="10sp"
            android:elevation="20sp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/redPrimary"
                android:orientation="vertical"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:src="@drawable/distance"
                    app:tint="@color/white" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Distance"
                    android:id="@+id/distance_bottom"
                    android:textSize="17sp"
                    android:textColor="@color/white"
                    android:textAlignment="center"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:text="কিঃমিঃ দূরে"
                    android:textSize="12sp"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/redPrimary"
            android:text="হেল্পলাইন:"
            android:layout_margin="15sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="15sp"
            android:id="@+id/phone_bottom"
            android:layout_weight="1"
            android:textColor="@color/redPrimary"
            android:textSize="17sp"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:background="@android:color/transparent"
            android:src="@drawable/telephone"
            android:id="@+id/call_btn_bottom"
            app:tint="@color/redPrimary" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="A"
        android:textSize="60sp"
        android:textColor="@color/redPrimary"
        android:textAlignment="center"
        android:id="@+id/grade_hospital"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="গ্রেডের হাসপাতাল"
        android:layout_marginBottom="30dp"
        android:textColor="@color/redPrimary"/>
</LinearLayout>